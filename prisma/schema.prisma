generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id            String   @id @default(cuid())
  email         String?  @unique
  password      String?
  name          String?
  age           Int?
  city          String?
  country       String?
  
  // Relations
  jobId         String?
  job           Job?     @relation(fields: [jobId], references: [id])
  
  genderId      String?
  gender        Gender?  @relation(fields: [genderId], references: [id])
  
  bio             String?   
  
  educationId     String?
  education       Education?     @relation(fields: [educationId], references: [id])
  
  maritalStatusId String?
  maritalStatus   MaritalStatus? @relation(fields: [maritalStatusId], references: [id])
  
  intentionId     String?
  intention       Intention?     @relation(fields: [intentionId], references: [id])
  
  // Many-to-Many relation
  hobbies       Hobby[]
  
  images        UserImage[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  likesSent     Like[]   @relation("LikesSent")
  likesReceived Like[]   @relation("LikesReceived")
}

model UserImage {
  id        String   @id @default(cuid())
  url       String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

model Like {
  id          String   @id @default(cuid())
  senderId    String
  receiverId  String
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt   DateTime @default(now())

  sender      User     @relation("LikesSent", fields: [senderId], references: [id])
  receiver    User     @relation("LikesReceived", fields: [receiverId], references: [id])

  @@unique([senderId, receiverId])
}

model Hobby {
  id        String   @id
  name      String   @unique
  sortOrder Int      @default(0)
  users     User[]
}

model Job {
  id        String   @id
  name      String   @unique
  sortOrder Int      @default(0)
  users     User[]
}

model Gender {
  id        String   @id
  name      String   @unique
  sortOrder Int      @default(0)
  users     User[]
}

model BioTemplate {
  id        String   @id
  content   String   @unique
  sortOrder Int      @default(0)
}

model IceBreaker {
  id        String   @id
  content   String   @unique
  sortOrder Int      @default(0)
}

model MaritalStatus {
  id        String   @id
  name      String   @unique // ms_single, ms_divorced vb.
  sortOrder Int      @default(0)
  users     User[]
}

model Education {
  id        String   @id
  name      String   @unique // edu_phd, edu_masters vb.
  sortOrder Int      @default(0)
  users     User[]
}

model Intention {
  id        String   @id
  name      String   @unique // int_chat, int_friendship vb.
  sortOrder Int      @default(0)
  users     User[]
}
